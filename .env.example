# Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control

# Application
NODE_ENV=development
PORT=3000
APP_NAME=flyingnimbustest
API_VERSION=v1

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database (Provider Agnostic)
DATABASE_PROVIDER=firebase
DATABASE_URL=
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=5000

# Firebase (Current Provider)
FIREBASE_PROJECT_ID=flyingnimbustest
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_DATABASE_URL=

# Caching
CACHE_PROVIDER=memory
CACHE_TTL=300
REDIS_URL=

# Storage
STORAGE_PROVIDER=firebase
STORAGE_BUCKET=
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# API Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=60000
API_RATE_LIMIT_MAX=100
API_BURST_LIMIT=10

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# External Services
SENDGRID_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Feature Flags
FEATURE_AUTH_ENABLED=true
FEATURE_PAYMENT_ENABLED=false
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Development
DEV_TOOLS_ENABLED=false
MOCK_EXTERNAL_SERVICES=false
SEED_DATABASE=false

# Testing
TEST_DATABASE_URL=
TEST_JWT_SECRET=test-secret-do-not-use-in-production

# MCP Server Configuration
CONTEXT7_API_KEY=your-context7-api-key-from-context7.com
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
GITHUB_TOKEN=your-github-personal-access-token
EXA_API_KEY=your-exa-api-key-from-exa.ai